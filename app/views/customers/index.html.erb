<h1>Customers</h1>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<p>
  <%= link_to 'New Customer', new_customer_path %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.created_at.strftime("%b %d, %Y") %></td>
        <td>
          <%= link_to 'View', customer_path(customer) %> |
          <%= link_to 'Edit', edit_customer_path(customer) %> |
          <%= button_to 'Delete', customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
