<h2>Lead Details</h2>

<div class="lead-details">
  <p><strong>Title:</strong> <%= @opportunity.title %></p>
  <p><strong>Amount:</strong> <%= @opportunity.amount %></p>
  <p><strong>Stage:</strong> <%= @opportunity.stage %></p>
  <p><strong>Close Date:</strong> <%= @opportunity.close_date %></p>
  <p><strong>Notes:</strong> <%= @opportunity.notes %></p>
  <p><strong>Assigned To:</strong> <%= @opportunity.assigned_user&.email || 'Unassigned' %></p>
  <p><strong>Created At:</strong> <%= @opportunity.created_at.strftime("%b %d, %Y") %></p>
  <p><strong>Updated At:</strong> <%= @opportunity.updated_at.strftime("%b %d, %Y") %></p>
</div>

<div class="actions">
  <%= link_to 'Edit Opportunity', edit_opportunity_path(@opportunity), class: "button" %>
  <%= link_to 'Back to Opportunities', opportunities_path, class: "button secondary" %>
</div>
