<h2>Lead Details</h2>

<div class="lead-details">
  <p><strong>Name:</strong> <%= @lead.name %></p>
  <p><strong>Email:</strong> <%= @lead.email %></p>
  <p><strong>Phone:</strong> <%= @lead.phone %></p>
  <p><strong>Status:</strong> <%= @lead.status %></p>
  <p><strong>Source:</strong> <%= @lead.source %></p>
  <p><strong>Company:</strong> <%= @lead.notes %></p>
  <p><strong>Assigned To:</strong> <%= @lead.assigned_user&.email || 'Unassigned' %></p>
  <p><strong>Created At:</strong> <%= @lead.created_at.strftime("%b %d, %Y") %></p>
  <p><strong>Updated At:</strong> <%= @lead.updated_at.strftime("%b %d, %Y") %></p>
</div>

<div class="actions">
  <%= link_to 'Edit Lead', edit_lead_path(@lead), class: "button" %>
  <%= link_to 'Back to Leads', leads_path, class: "button secondary" %>
</div>
